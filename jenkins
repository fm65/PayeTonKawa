pipeline{
agent any

    stages {
        stage('Checkout') {
            steps {
                    git branch: 'master', url: 'https://github.com/fm65/PayeTonKawa.git'
            }
        }

        stage('Create virtualenv') {
            steps {
                sh 'python3 -m venv env'
            }
        }
        
        stage('activate virtualenv') {
            steps {
                sh 'chmod +x env/bin/activate'
                sh '. env/bin/activate'
            }
        }
        
        stage('Install requirements') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }
        
        stage('Initialize database') {
            steps {
                sh 'echo Database Initialize'
            }
        }
        
        stage('Test forms') {
            steps {
                //sh 'python3 main.py'
                sh 'echo Test forms'
            }
        }
        
        stage('Test models') {
            steps {
                //sh 'python3 manage.py test_models'
                sh 'echo Test models'
            }
        }
        
        stage('Test routes') {
            steps {
                //sh 'python3 manage.py test_routes'
                sh 'echo Test routes'
            }
        }

        stage('All tests') {
            steps {
                //sh 'python3 manage.py test'
                sh 'echo All tests'
            }
        }
    }
}
